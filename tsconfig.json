{
  "compilerOptions": {
    "lib": ["dom", "es2015", "es2018.promise"],
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "rootDir": ".",
    "paths": {
      "lib/*": ["src/lib/*", "build/src/lib/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "index.ts",
    "src/lib/*.ts",
    "src/lib/actors/*.ts",
    "src/lib/behaviors/*.ts",
    "test/lib/**/*",
    "test/testproject/**/*",
    "node_modules/@types/jest/index.d.ts"
  ]
}